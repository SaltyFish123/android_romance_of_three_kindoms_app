<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jason.lab5.SearchActivity">
    <RelativeLayout
        android:id="@+id/hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:typeface="sans"
            android:layout_centerHorizontal="true"
            android:text="@string/hint"/>
        <LinearLayout
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/title"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#528B8B"
                android:typeface="sans"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="势力："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#528B8B"
                android:layout_marginStart="15dp"
                android:typeface="sans"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="@string/hint_wei"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:background="#3B3B3B">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#528B8B"
                android:layout_marginStart="15dp"
                android:typeface="sans"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="@string/hint_shu"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:background="#3B3B3B">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#528B8B"
                android:layout_marginStart="15dp"
                android:typeface="sans"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="@string/hint_wu"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/charactor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/power"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#528B8B"
                android:typeface="sans"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="人物："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#528B8B"
                android:layout_marginStart="15dp"
                android:typeface="sans"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="@string/hint_name1"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:background="#3B3B3B">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#528B8B"
                android:layout_marginStart="15dp"
                android:typeface="sans"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="@string/hint_name2"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:background="#3B3B3B">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#528B8B"
                android:layout_marginStart="15dp"
                android:typeface="sans"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="@string/hint_name3"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jason.lab5.Infor">
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/charactor"
        android:scaleType="fitCenter"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/back"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/line3"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/charactor_name"
        android:textSize="15sp"
        android:textColor="#D5000000"
        app:layout_constraintLeft_toLeftOf="@+id/line3"
        app:layout_constraintBottom_toTopOf="@+id/line2" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:id="@+id/infor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info1"
            android:layout_alignParentStart="true"
            android:text="temp"
            android:textSize="15sp"
            android:textColor="#D5000000"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/more_info"
            android:layout_alignStart="@id/info1"
            android:layout_alignParentBottom="true"
            android:text="temp"
            android:textSize="15sp"
            android:textColor="#8A000000"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#D5000000"
            android:textSize="20sp"
            android:text="temp"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#1E000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#D5000000"
            android:textSize="20sp"
            android:text="temp"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#D5000000"
            android:textSize="20sp"
            android:text="temp"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1E000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#D5000000"
            android:textSize="20sp"
            android:text="temp"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#D5000000"
            android:textSize="20sp"
            android:text="temp"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E000000"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
